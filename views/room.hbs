<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Bungee|Faster+One" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet" type="text/css" />
    <title>
        Munkee
    </title>
</head>

<body>
    <div class="container-fluid-main container-fluid">
        <nav class="navbar navbar-default">
            <div class="container-fluid container-fluid-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/">quick game</a></li>
                        <li class="active"><a href="/online">ONLINE</a></li>
                        <li><a href="https://www.youtube.com/watch?v=gVIvB-ahI4A" target="_blank">How to Play</a></li>
                        <li><a href="http://www.billsheng.me" target="_blank">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="title">
            <h1 id="header-room">
                Room<br /> #
                <span id="roomId" class="roomId">{{getRoomId}}</span><a id="copy" class="btn copy"></a>
            </h1>
        </div>
        <div class="tab-content">
            <a id="copy" class="btn copy"></a>
            <div id="play" class="tab-pane fade in active">
                <div class="jumbotron jumbo-game-room">
                    <div class="jumbotron-msg">
                        <div id="message" class='message'>
                            {{fetchMsg}}
                        </div>
                    </div>
                    <div class="col-md-4 p0-room block-game">
                        <div class="box">
                            <div id="text-p0" class="col-sm-4 main-text act">
                                {{getHostName}}
                            </div>
                            <div id="score0" class="col-sm-4 score0 act">
                                0
                            </div>
                        </div>
                        <div class="col-sm-4 container curr-container">
                            <h3>
                                Current
                            </h3>
                            <div id="curr-score0" class="score-curr0 act">
                                0
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 btn-div-room btn-div-online block-game">
                        <div class="jumbotron btn-jumbo jumbotron-dark btn-jumbo-room">
                            <a id="btn-new" class="btn-home btn btn-primary btn-new disabled"><i class="fas fa-plus"></i>&nbsp;&nbsp;New</a> 
                            <a id="btn-start" class="btn-home btn btn-primary disabled"><i class="fas fa-check"></i></i>&nbsp;&nbsp;Start</a>
                            <a id="btn-hold" class="btn-home btn btn-primary btn-hold disabled"><i class="fas fa-hand-paper"></i>&nbsp;&nbsp;Hold</a>
                            <a id="btn-roll" class="btn-home btn btn-primary btn-roll disabled"><i class="fas fa-play"></i>&nbsp;&nbsp;Roll</a>
                        </div>
                        <img class="dice-room" id="dice" src="/images/dice1.png" />
                        <div class="playerHoldDice" id="hold-msg">Player Hold!</div>
                    </div>
                    <div class="col-md-4 p2-room block-game">
                        <div class='box'>
                            <div id="text-p1" class="col-sm-4 main-text">
                                {{getP2Name}}
                            </div>
                            <div id="score1" class="col-sm-4 score1">
                                0
                            </div>
                        </div>
                        <div class="col-sm-4 container curr-container">
                            <h3>
                                Current
                            </h3>
                            <div id="curr-score1" class="score-curr1">
                                0
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="settings" class="tab-pane fade in">
                <div class="jumbotron">
                    <div class="container">
                        <div class="title3">
                            Settings
                        </div>
                        <div class="col-md-4">
                            <div class="title2">
                                Adjust Player 1 Name
                            </div><input type="text" placeholder="Player 1 Name" class="p1-name input1" /> <a class="settings-btn btn btn-primary btn-p1">GO</a>
                        </div>
                        <div class="col-md-4">
                            <div class="title2">
                                adjust Player 2 Name
                            </div><input type="text" placeholder="Player 2 Name" class="p2-name input1" /> <a class="settings-btn btn btn-primary btn-p2">GO</a>
                        </div>
                        <div class="col-md-4">
                            <div class="title2">
                                adjust Max Score
                            </div><input type="text" placeholder="Max Score" class="max-score input1" /> <a class="settings-btn btn btn-primary btn-max">GO</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous" type="text/javascript">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous" type="text/javascript">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous" type="text/javascript">
    </script>
    <script src="/../bootstrap.min.js" type="text/javascript">
    </script>
    <script src="/../socket.io/socket.io.js" type="text/javascript">
    </script>
    <script src="/../socket.js" type="text/javascript">
    </script>
    <script src="/app-online.js" type="text/javascript">
    </script>
</body>
</html>